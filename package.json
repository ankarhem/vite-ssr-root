{
  "name": "root-config",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node -r dotenv/config ./dist/server.js",
    "dev": "nodemon",
    "build": "pnpm build:client && pnpm build:server",
    "build:client": "tsc && vite build --outDir dist/client",
    "build:server": "tsc --project ./tsconfig.node.json --outDir ./dist && vite build --outDir dist/server --ssr ./src/entry-server.tsx",
    "preview": "vite preview"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/node": "^18.8.1",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.1.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.6.4",
    "vite": "^3.1.0",
    "vite-plugin-live-reload": "^3.0.1"
  }
}